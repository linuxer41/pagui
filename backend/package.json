{
  "name": "payments-backend",
  "version": "2.0.0",
  "description": "Backend para sistema de pagos con QR",
  "type": "module",
  "scripts": {
    "register-bank": "bun run src/scripts/register-bank-for-company.ts",
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --target node --outdir ./dist",
    "lint": "eslint .",
    "init-db": "bun run src/scripts/init-db.ts",
    "create-env": "bun run src/scripts/create-env.ts",
    "seed-db": "bun run src/scripts/seed-db.ts",
    "setup-baneco": "bun run src/scripts/setup-bankeco-credentials.ts",
    "test": "bun test",
    "test:health": "bun test test/health.test.js",
    "test:auth": "bun test test/auth.test.js",
    "test:qr": "bun test test/qr/generation.test.js",
    "test:payment": "bun test test/payment/notification.test.js",
    "test:apikey": "bun run test/run-apikey-tests.js",
    "qr-generator": "bun run scripts/generate-qr-with-apikey.js",
    "test:all": "bun run test/run-tests.js"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.3.0",
    "@elysiajs/cron": "^1.3.0",
    "@elysiajs/swagger": "^1.3.0",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.58.5",
    "cron": "^4.3.1",
    "date-fns": "^2.30.0",
    "elysia": "^1.3.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^5.0.4",
    "pg": "^8.11.3",
    "qrcode": "^1.5.3"
  },
  "devDependencies": {
    "@types/bun": "^1.2.19",
    "@types/ioredis": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.2",
    "@types/pg": "^8.10.9",
    "@types/qrcode": "^1.5.5",
    "node-fetch": "^2.7.0",
    "typescript": "^5.3.2"
  }
}